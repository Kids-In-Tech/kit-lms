    },
    "login_background": {
      "url": "https://images.unsplash.com/photo-1767482712650-8e52fbf8ca0d?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NTYxOTB8MHwxfHNlYXJjaHwzfHxtaW5pbWFsaXN0JTIwYWJzdHJhY3QlMjBnZW9tZXRyaWMlMjBzaGFwZXN8ZW58MHx8fHwxNzcwNDIzNTk1fDA&ixlib=rb-4.1.0&q=85",
      "description": "Abstract colorful geometric pattern",
