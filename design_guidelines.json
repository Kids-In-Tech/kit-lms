    },
    "student_profile": {
      "url": "https://images.unsplash.com/photo-1629359652978-a5d383151c4c?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NTYxODd8MHwxfHNlYXJjaHwzfHxzdHVkZW50JTIwbGVhcm5pbmclMjBsYXB0b3B8ZW58MHx8fHwxNzcwNDIzNTk0fDA&ixlib=rb-4.1.0&q=85",
      "description": "Student focusing on learning",
      "category": "profile"
    },
    "dashboard_banner": {
      "url": "https://images.unsplash.com/photo-1770368437389-86bde15fcb33?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NTYxOTB8MHwxfHNlYXJjaHwyfHxtaW5pbWFsaXN0JTIwYWJzdHJhY3QlMjBnZW9tZXRyaWMlMjBzaGFwZXN8ZW58MHx8fHwxNzcwNDIzNTk1fDA&ixlib=rb-4.1.0&q=85",
      "description": "Abstract blue and orange shapes",
      "category": "banner"
    }
  },
  "libraries": {
    "charts": "recharts",
    "icons": "lucide-react",
    "date": "date-fns",
    "forms": "react-hook-form + zod",
    "ui_primitives": "shadcn/ui",
    "motion": "framer-motion"
  },
  "accessibility": {
    "rules": [
      "Ensure 4.5:1 contrast ratio for text",
      "Use semantic HTML (nav, main, aside, section)",
      "Focus rings must be visible",
      "All interactive elements need aria-labels if no text"
    ]
  },
  "instructions_to_main_agent": [
    "Install 'lucide-react' and 'recharts' if not present.",
    "Use 'Manrope' for all Headings (H1-H4) and 'Public Sans' for body text.",
    "Implement the 'Control Tower' layout for Admin/Instructor dashboards.",
    "Implement the 'Learning Lounge' layout for Student Portal.",
    "Use the provided image URLs for specific sections.",
    "Do not use gradients for backgrounds, use the 'Warm Stone' (#FAFAF9) solid color.",
    "Add 'data-testid' to all buttons, inputs, and links."
  ],
  "UNIVERSAL_GUIDELINES_FOR_MAIN_AGENT": [
    "Do not use generic centered layouts. Use grid-based asymmetry.",
    "Use 24px+ padding inside cards.",
    "Never use pure black (#000000); use Slate 900 or Stone 900.",
    "Micro-animations on all hover states (transform, opacity, or border color).",
    "Use 'sonner' for toast notifications.",
    "Components must use named exports.",
    "Pages must use default exports."
  ]
}